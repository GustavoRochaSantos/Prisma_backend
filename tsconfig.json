{
  "compilerOptions": {
    "target": "ESNext",                            
    "module": "commonjs",                       
    "lib": ["ESNext"],      
    "allowJs": true,
    "sourceMap": true,                       
    "outDir": "./build",                          
    "rootDir": "./src",                         
    "baseUrl": ".",
    "strict": true,                             
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types",
    ],
    "esModuleInterop": true,                    
    "skipLibCheck": true,                       
    "forceConsistentCasingInFileNames": true    
  },
  "include": [
    "src/**/*"
  ]
}
